<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addrecomendacao"
    tools:context=".CadRecomendaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/lilasClaro"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:src="@drawable/barra"
            android:id="@+id/barra"/>
        <ImageButton
            android:id="@+id/btnVoltaPerf"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="onClick"
            android:src="@drawable/user"/>

    </RelativeLayout>


    <EditText
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_form_field_top"
        android:layout_centerInParent="true"
        android:id="@+id/edtNome"
        android:hint="Nome"
        android:nextFocusDown="@id/edtCat"
        />

    <EditText
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_form_field_top"
        android:layout_centerInParent="true"
        android:id="@+id/edtCat"
        android:layout_below="@id/edtNome"
        android:hint="Categoria"
        android:nextFocusDown="@id/edtIdade1"
        />
    <EditText
        android:layout_width="309dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_form_field_top"
        android:layout_centerInParent="true"
        android:id="@+id/edtOnde"
        android:layout_below="@id/edtCat"
        android:hint="Onde podemos encontrar?"
        android:nextFocusDown="@id/edtDesc"
        />
    <EditText
        android:layout_width="309dp"
        android:layout_height="140dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_form_field_top"
        android:layout_centerInParent="true"
        android:inputType="textPassword"
        android:id="@+id/edtDesc"
        android:layout_below="@id/edtOnde"
        android:hint="Diga porque é interessante conhecer!"
        />

    <Button
        android:id="@+id/btnCadR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40px"
        android:layout_marginTop="60px"
        android:background="@color/branco"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:onClick="onClick"
        android:text="adicionar recomendação" />


</RelativeLayout>